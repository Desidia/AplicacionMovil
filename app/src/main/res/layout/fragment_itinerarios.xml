<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3"
    android:weightSum="100"
    tools:context="com.ii.is.aplicacion.aplicacionmovil.Itinerarios">

    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:id="@+id/ListaDeItinierario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CB944"
        android:divider="@drawable/divider"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/CrearItiner"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITINERARIOS"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#4CB944"
        android:textIsSelectable="false"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/CrearItiner"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

    <Button
        android:id="@+id/CrearItiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Itinerario   +"
        android:textSize="25sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/ListaDeItinierario" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45pt"
        android:layout_height="45pt"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scrollHorizontally="false"
        android:text="Imagen de rutas"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:visibility="visible"
        app:srcCompat="@drawable/itinerarios_button_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
