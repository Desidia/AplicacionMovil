<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/Funcion"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/Nivel"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/Funcion"
            android:layout_alignBottom="@+id/Funcion"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/Funcion"
            android:text="TextView" />

        <TextView
            android:id="@+id/Asignatura"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/Nivel"
            android:layout_alignBottom="@+id/Nivel"
            android:layout_marginStart="210dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/Cantidad"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/Asignatura"
            android:layout_alignBottom="@+id/Asignatura"
            android:layout_marginStart="270dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/Asistencia"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/Cantidad"
            android:layout_alignBottom="@+id/Cantidad"
            android:layout_marginStart="325dp"
            android:text="TextView" />
    </RelativeLayout>
</LinearLayout>