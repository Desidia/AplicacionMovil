<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/titutloitinerario"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:text="Nombre de itinerario"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/viewitinerario"
            android:layout_alignEnd="@+id/viewitinerario" />

        <TextView
            android:id="@+id/tex"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titutloitinerario"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Creador :"
             />

        <TextView
            android:id="@+id/creadoritinerario"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:text="Creador itinerario"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_above="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/tex"
            android:layout_below="@+id/tex"
            android:layout_marginTop="17dp"
            android:text="Disponibilidad: "
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/disponibilidaditinerario"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:text="Disponibilidad itinerario"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <ListView
            android:id="@+id/viewitinerario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@android:drawable/divider_horizontal_textfield"
            android:layout_below="@+id/disponibilidaditinerario"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            />

        <ImageButton
            android:id="@+id/boton_like"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4CB944"
            app:srcCompat="@drawable/happy_face"
            android:layout_below="@+id/titutloitinerario"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="-25dp"
            android:layout_toEndOf="@+id/creadoritinerario"
            android:layout_above="@+id/viewitinerario" />

    </RelativeLayout>
</RelativeLayout>
