<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ii.is.aplicacion.aplicacionmovil.DetalleItinerario"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/titutloitinerario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:text="Nombre de itinerario"
            android:textColor="#95D592"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tex"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titutloitinerario"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:text="Creador"
            android:textColor="#95D592" />

        <TextView
            android:id="@+id/creadoritinerario"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_above="@+id/disponibilidaditinerario"
            android:layout_marginStart="11dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/textView5"
            android:text="Creador itinerario"
            android:textColor="#95D592" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/tex"
            android:layout_below="@+id/tex"
            android:layout_marginTop="17dp"
            android:textStyle="bold"
            android:text="Disponibilidad"
            android:textColor="#95D592" />

        <TextView
            android:id="@+id/disponibilidaditinerario"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:layout_alignStart="@+id/creadoritinerario"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginTop="20dp"
            android:text="Disponibilidad itinerario"
            android:textColor="#95D592" />

        <ListView
            android:id="@+id/viewitinerario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@android:drawable/divider_horizontal_textfield"
            android:layout_below="@+id/disponibilidaditinerario"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
