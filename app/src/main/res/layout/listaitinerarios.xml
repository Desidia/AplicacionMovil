<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@color/DarkGreenItinerario"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/nombre_itinerario"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="80dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/NombreAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:scrollHorizontally="false"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/likes_itinerario"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="200"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="@color/DarkGreenItinerario"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/happy_face_liked"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/likes_itinerario" />


</RelativeLayout>