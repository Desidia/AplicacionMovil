<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ii.is.aplicacion.aplicacionmovil.Principal">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Spinner
            android:id="@+id/Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Propiedades"
            android:layout_toStartOf="@+id/Marcadores"
            android:text="Buscar" />

        <Button
            android:id="@+id/Lugares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Spinner"
            android:layout_marginStart="12dp"
            android:text="Lugares" />

        <Button
            android:id="@+id/Itinerarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/Spinner"
            android:text="Itinerarios" />

        <Button
            android:id="@+id/Servicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Itinerarios"
            android:layout_marginStart="47dp"
            android:layout_toEndOf="@+id/Propiedades"
            android:text="Servicios" />

        <Button
            android:id="@+id/Marcadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Spinner"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/Lugares"
            android:text="Marcadores" />

        <Button
            android:id="@+id/Propiedades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Servicios"
            android:layout_alignBottom="@+id/Servicios"
            android:layout_alignStart="@+id/Lugares"
            android:layout_marginStart="32dp"
            android:text="Mis Lugares" />

        <ViewSwitcher
            android:id="@+id/Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Buscar"
            android:layout_below="@+id/Buscar"
            android:layout_marginTop="18dp">

            <ListView
                android:id="@+id/Lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Spinner"
                android:divider="@android:drawable/divider_horizontal_textfield"
                android:layout_marginStart="11dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/Lugares" />

            <ListView
                android:id="@+id/ListIter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/Buscar"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/Lugares" />
        </ViewSwitcher>

        <Button
            android:id="@+id/crearitinerario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Switch"
            android:layout_alignStart="@+id/Servicios"
            android:text="Crear Itinerario" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
