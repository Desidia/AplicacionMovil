<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ii.is.aplicacion.aplicacionmovil.Principal">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Spinner
            android:id="@+id/Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="Buscar" />

        <Button
            android:id="@+id/Lugares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Itinerarios"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Buscar"
            android:text="Lugares" />

        <Button
            android:id="@+id/Itinerarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Servicios"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lugares"
            android:text="Itinerarios" />

        <Button
            android:id="@+id/Servicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Marcadores"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Itinerarios"
            android:text="Servicios" />

        <Button
            android:id="@+id/Marcadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Servicios"
            android:text="Marcadores" />

        <Button
            android:id="@+id/Propiedades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Marcadores"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Marcadores"
            android:text="Mis Lugares" />

        <ListView
            android:id="@+id/Lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/Buscar"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/Lugares" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
